format-discharging = %{T3}Discharging <label-discharging> %{T-}
format-charging-underline = #43d15d
format-discharging-underline = #ffe226
;format-full = %{T3}Battery <label-full>
label-charging-font = 3
label-discharging-font = 3
label-full =  Charged

